<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChiTietActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarChiTiet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#03A9F4"
        app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintTop_toBottomOf="@+id/toolbarChiTiet"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/nhadep7"
        android:id="@+id/imageNhaDepCT"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:text="tên nhà"
        app:layout_constraintTop_toBottomOf="@+id/imageNhaDepCT"
        android:layout_marginLeft="25dp"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/txtTenNha"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:text="giá nhà"
        app:layout_constraintTop_toBottomOf="@+id/txtTenNha"
        android:layout_marginLeft="25dp"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/txtGiaNha"
        android:layout_marginTop="10dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>